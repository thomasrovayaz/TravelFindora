# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                                       Application.index

# Sign in page
GET		/signIn									Application.signIn


# Login page
GET     /login                                  Application.login

# Import Secure routes
*       /                                       module:secure

# Import CRUD routes
*      /admin             						module:crud

# Gestion commentaire
GET     /commentaire/add                        ControllerUser.formComment
GET     /commentaire/delete/{commentId}         ControllerUser.deleteComment
GET     /commentaire/edit/{commentId}           ControllerUser.formEditComment

# Gestion content
GET     /content/{type}/add                     ControllerUser.formContent
GET     /content/delete/{commentId}             ControllerUser.deleteContent
GET     /content/{type}/edit/{contentId}        ControllerUser.formEditContent

# User page
GET     /user/                                  ControllerUser.index

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Catch all
*       /{controller}/{action}                  {controller}.{action}

